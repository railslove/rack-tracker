<% if tracker %>
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= tracker %>"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', "<%= tracker %>");
  </script>

  <script type="text/javascript">
    <% events.each do |var| %>
      gtag('event', "<%= var.category %>", {
        action: "<%= var.action %>"
      });
    <% end %>
  </script>
<% end %>
